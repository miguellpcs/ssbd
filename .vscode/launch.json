{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/bin/hll",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch GK",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/gk",
            "args": [
                "--val",
                "7",
                "--eps",
                "0.1",
                "../data/network_flows.csv",
                "--quant",
                "--in",
                "../data/gk_test.in"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch QDigest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/qdig",
            "args": [
                "--val",
                "0",
                "--eps",
                "0.1",
                "--univ",
                "10",
                "../data/gk_test.csv",
                "--quant",
                "--in",
                "../data/gk_test.in",
                "--strategy",
                "update"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch HLL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/hll",
            "args": [
                "--target",
                "0",
                "--eps",
                "0.2",
                "--delta",
                "0.1",
                "../network_flows.csv"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}