{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/bin/hll",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch WS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ws",
            "args": [
                "--id",
                "0",
                "--weight",
                "6",
                "--filter",
                "8",
                "GOOGLE",
                "--size",
                "1024",
                "../network_flows_unique.csv"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch KMV",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/kmv",
            "args": [
                "--target",
                "7",
                "--eps",
                "0.05",
                "--delta",
                "0.01",
                "../network_flows.csv"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch HLL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/hll",
            "args": [
                "--target",
                "0",
                "--eps",
                "0.2",
                "--delta",
                "0.1",
                "../network_flows.csv"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}